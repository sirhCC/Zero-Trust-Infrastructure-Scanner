{
  "name": "zero-trust-infrastructure-scanner",
  "version": "1.0.0",
  "description": "Enterprise-grade Zero-Trust Infrastructure Scanner for network micro-segmentation, identity permission mining, supply chain security, and compliance automation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --config jest.ci.config.js --coverage",
    "test:ci": "jest --ci",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "verify": "npm run format:check && npm run lint && npm run typecheck && npm run test:ci",
    "verify:fast": "npm run lint && npm run typecheck",
    "clean": "rimraf dist",
    "clean:artifacts": "rimraf reports scan-results *.report.*",
    "clean:all": "rimraf dist coverage bin logs reports scan-results *.report.*",
    "prebuild": "npm run clean",
    "postbuild": "copyfiles -u 1 \"src/**/*.json\" dist",
    "scan": "ts-node src/cli.ts",
    "scan:network": "ts-node src/cli.ts network",
    "scan:identity": "ts-node src/cli.ts identity",
    "scan:supply-chain": "ts-node src/cli.ts supply-chain",
    "scan:compliance": "ts-node src/cli.ts compliance",
    "scan-all": "ts-node src/cli.ts scan-all",
    "monitor": "ts-node src/cli.ts monitor",
    "dashboard": "ts-node src/cli.ts dashboard",
    "server": "ts-node src/cli.ts server",
    "build:bin": "npm run build && pkg dist/cli.js -t node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path bin",
    "build:bin:win": "npm run build && pkg dist/cli.js -t node18-win-x64 --out-path bin",
    "clean:ci": "npm run clean:all && rimraf .jest-cache test-results",
    "docs:api": "typedoc",
    "postinstall": "simple-git-hooks"
  },
  "keywords": [
    "zero-trust",
    "security",
    "infrastructure",
    "scanner",
    "compliance",
    "network-security",
    "identity-management",
    "supply-chain",
    "devops",
    "security-automation"
  ],
  "author": "sirhCC",
  "license": "MIT",
  "bin": {
    "zero-trust-scanner": "dist/cli.js"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "inquirer": "^12.9.4",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "ora": "^5.4.1",
    "regression": "^2.0.1",
    "simple-statistics": "^7.8.3",
    "winston": "^3.10.0",
    "ws": "^8.18.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "jest": "^30.1.3",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.13.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.13",
    "prettier": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sirhCC/Zero-Trust-Infrastructure-Scanner.git"
  },
  "bugs": {
    "url": "https://github.com/sirhCC/Zero-Trust-Infrastructure-Scanner/issues"
  },
  "homepage": "https://github.com/sirhCC/Zero-Trust-Infrastructure-Scanner#readme",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run verify:fast"
  },
  "pkg": {
    "assets": [
      "dist/config/ztis.schema.json"
    ],
    "scripts": [
      "dist/scanners/*.js"
    ]
  }
}
